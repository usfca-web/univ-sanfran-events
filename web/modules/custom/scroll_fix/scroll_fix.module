<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * Attach library on all node forms (add/edit).
 *
 * This works regardless of which theme (front or admin) is active.
 */
function scroll_fix_form_node_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  // Optionally restrict to edit/add routes, but generally safe to attach on all node forms.
  $form['#attached']['library'][] = 'scroll_fix/scroll_behavior';
}